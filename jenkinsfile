pipeline {
    agent any
    environment {
        SONAR_TOKEN = credentials('jenkins-token') 
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/bousminayasmine8-create/mini-projet-.git', credentialsId: 'gitjinkins'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('mini-projet-sonarqube') {
                    sh 'mvn sonar:sonar -Dsonar.login=${SONAR_TOKEN}'
                }
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
    post {
        failure {
            echo 'Pipeline échoué.'
        }
    }
}

