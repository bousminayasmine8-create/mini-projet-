pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('mini-projet-token')
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh "mvn clean install -DskipTests"
            }
        }

        stage('Unit Tests') {
            steps {
                sh "mvn test"
            }
        }

        stage('SonarQube Analysis') {
            steps {
               withSonarQubeEnv('mini-projet-sonarqube') {
    sh 'mvn sonar:sonar'

                }

            }
        }

        stage('Package') {
            steps {
                sh "mvn package -DskipTests"
            }
        }

    } 

} 

