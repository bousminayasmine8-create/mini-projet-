pipeline {
    agent any
    
    environment {
        MAVEN_HOME = "/usr/share/maven"
        JAVA_HOME  = "/usr/lib/jvm/java-17-openjdk-amd64"
        PATH = "${MAVEN_HOME}/bin:${JAVA_HOME}/bin:${env.PATH}"
        SONAR_HOST_URL = "http://localhost:9000"  // ou http://127.0.0.1:9000
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                git branch: 'main', 
                    url: 'https://github.com/bousminayasmine8-create/mini-projet-.git',
                    credentialsId: 'gitjinkins'
            }
        }
        
        stage('Build') {
            steps {
                echo 'üî® Building project...'
                sh 'mvn clean compile'
            }
        }
        
        stage('Unit Tests') {
            steps {
                echo 'üß™ Running unit tests...'
                sh 'mvn test || true'
            }
            post {
                always {
                    junit testResults: '**/target/surefire-reports/*.xml', 
                         allowEmptyResults: true
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                echo 'üîç Running SonarQube analysis...'
                withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                    sh """
                        mvn sonar:sonar \
                        -Dsonar.projectKey=mini-projet \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=\${SONAR_TOKEN}
                    """
                }
            }
        }
        
        stage('Package') {
            steps {
                echo 'üì¶ Packaging application...'
                sh 'mvn package -DskipTests'
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/target/*.war', 
                                   fingerprint: true,
                                   allowEmptyArchive: true
                    echo '‚úÖ Artifact archived successfully!'
                }
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ ============================================'
            echo '‚úÖ Pipeline CI termin√© avec succ√®s !'
            echo '‚úÖ ============================================'
        }
        failure {
            echo '‚ùå ============================================'
            echo '‚ùå Le pipeline a √©chou√©.'
            echo '‚ùå ============================================'
        }
    }
}
