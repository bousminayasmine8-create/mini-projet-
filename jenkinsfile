pipeline {
    agent any
    
    environment {
        TOMCAT_URL = 'http://192.168.100.130:8080'
        SONAR_HOST = 'http://192.168.100.130:9000'
    }
    
    stages {
        stage('Build') {
            steps {
                echo 'üî® Building...'
                sh 'mvn clean package -DskipTests'
            }
        }
        
        stage('Tests') {
            steps {
                echo 'üß™ Testing...'
                sh 'mvn test'
            }
        }
        
        stage('SAST - SonarQube') {
            steps {
                echo 'üîç SAST Analysis...'
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=mini-projet'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'üöÄ Deploying...'
                sh 'sudo cp target/*.war /var/lib/tomcat9/webapps/mini-projet.war'
                sleep(time: 30, unit: 'SECONDS')
            }
        }
        
        stage('DAST - Nikto') {
            steps {
                echo 'üîç DAST Scan...'
                sh '''
                    mkdir -p dast-reports
                    nikto -h ${TOMCAT_URL} \
                          -o dast-reports/nikto-report.html \
                          -Format html \
                          -Tuning 123456789abc || true
                '''
            }
            post {
                always {
                    publishHTML([
                        reportDir: 'dast-reports',
                        reportFiles: 'nikto-report.html',
                        reportName: 'DAST Report'
                    ])
                }
            }
        }
    }
}
